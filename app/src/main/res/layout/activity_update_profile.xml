<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:background="@color/white"
    tools:context=".UpdateProfileActivity">


    <TextView
        android:id="@+id/update_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Update your Profile"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="35dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/instructions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/update_profile"
        android:text="You can update your profile details now."
        android:textColor="@color/black"
        android:textAlignment="center"
        android:fontFamily="sans-serif"
        android:textSize="20dp"/>

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/instructions"
        android:id="@+id/Name"
        android:text="Name"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textAllCaps="true"
        android:textSize="20dp"
        android:fontFamily="sans-serif"
        />

    <EditText
        android:id="@+id/editText_update_profile_name"
        android:layout_width="397dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Name"
        android:background="@drawable/border"
        android:hint="Enter your name"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="22dp" />

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editText_update_profile_name"
        android:id="@+id/textView_update_profile_dob"
        android:text="Date of Birth"
        android:textColor="@color/black"
        android:textAllCaps="true"
        android:textSize="20dp"
        android:fontFamily="sans-serif"
        />

    <EditText
        android:id="@+id/edit_text_update_profile_dob"
        android:layout_width="match_parent"
        android:layout_below="@+id/textView_update_profile_dob"
        android:layout_height="wrap_content"
        android:hint="Enter your date of birth (mm/dd/yy)"
        android:textSize="22dp"
        android:focusable="false"
        android:background="@drawable/border"
        android:padding="10dp"
        android:inputType="date"
        android:textColorHint="@color/black"
        />

    <Button
        android:id="@+id/update_email"
        android:layout_width="230dp"
        android:layout_height="45dp"
        android:layout_below="@+id/edit_text_update_profile_dob"
        android:layout_centerInParent="true"
        android:layout_marginStart="140dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/border"
        android:fontFamily="sans-serif"
        android:text="update email"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/update_profile_button"
        android:layout_width="230dp"
        android:layout_height="45dp"
        android:layout_below="@+id/update_email"
        android:layout_centerInParent="true"
        android:layout_marginStart="140dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/border"
        android:backgroundTint="@color/white"
        android:fontFamily="sans-serif"
        android:text="update profile"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="58dp"
        android:layout_height="85dp"
        android:layout_below="@id/update_profile_button"
        android:layout_centerInParent="true"
        android:elevation="10dp"
        android:visibility="gone" />

</RelativeLayout>